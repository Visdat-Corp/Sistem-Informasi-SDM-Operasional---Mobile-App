<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo Container -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <!-- Logo dengan Shadow -->
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/mainLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="app_logo"
                    android:scaleType="centerInside"
                    android:src="@drawable/whatsapp_image_2025_09_17_at_12_59_38_7c895b6e"
                    android:background="@color/white"
                    android:contentDescription="Logo"/>
            </androidx.cardview.widget.CardView>

            <!-- Judul Utama -->
            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT Visdat Teknik Utama"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginTop="8dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistem Absensi Karyawan"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Card Login -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loginCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/logoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Login Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masuk ke Akun Anda"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silakan masukkan kredensial Anda untuk melanjutkan"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Username Input dengan Icon -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/visdat_blue"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/visdat_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:paddingVertical="16dp"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input dengan Icon dan Toggle -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Password"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/visdat_blue"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_secondary"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/visdat_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:paddingVertical="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tombol Login Modern -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Masuk"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/visdat_blue"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#FFD700"
                    android:elevation="4dp"
                    app:cornerRadius="16dp"
                    app:rippleColor="#33FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    app:strokeWidth="0dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Text -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 PT Visdat Teknik Utama"
            android:textColor="#E3F2FD"
            android:textSize="12sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/loginCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
