<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="12dp">

        <View
            android:id="@+id/viewAccent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Januari 2025"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadir"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblHadir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Hadir :"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvJamHadir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00:00"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/lblTelat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terlambat :"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvTelat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:05:00"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblPulang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Pulang :"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvJamPulang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00:00"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/lblCepat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cepat Pulang :"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvCepat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Ulang"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btnRequestOverride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Override"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/tvOverrideStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="8dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_light"
        android:gravity="center" />

</LinearLayout>
