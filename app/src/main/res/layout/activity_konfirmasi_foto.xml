<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:animateLayoutChanges="true"
    android:forceDarkAllowed="false">

    <!-- Toolbar Top -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0A4DA3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:layout_above="@id/footerBar"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Main Card Content -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Admin Override Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Konfirmasi Foto"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#0A4DA3" />

                        <ImageButton
                            android:id="@+id/btnAdminOverride"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_manage"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:visibility="gone"
                            android:contentDescription="Admin Override"
                            android:tint="#0A4DA3"
                            tools:ignore="UseAppTint" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Photo Preview Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E0E0E0">

                        <ImageView
                            android:id="@+id/photo_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Preview Photo"
                            android:background="#F5F5F5" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Attendance Type Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Jenis Absensi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Grid Layout untuk Radio Buttons -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignBounds"
                        android:layout_marginBottom="8dp">

                        <!-- Cek In -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <RadioButton
                                android:id="@+id/radioCekIn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:text="Cek In"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:buttonTint="#0A4DA3" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Cek Out -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <RadioButton
                                android:id="@+id/radioCekOut"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:text="Cek Out"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:buttonTint="#0A4DA3" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Dinas Luar -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <RadioButton
                                android:id="@+id/radioDinasLuar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:text="Dinas Luar"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:buttonTint="#0A4DA3" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Lembur -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <RadioButton
                                android:id="@+id/radioVisit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:text="Lembur"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:buttonTint="#0A4DA3" />
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <!-- RadioGroup TERSEMBUNYI untuk kontrol -->
                    <RadioGroup
                        android:id="@+id/radioGroupAbsensi"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone">
                    </RadioGroup>

                    <!-- Admin Override Section -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/adminOverrideSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFF3E0"
                        app:strokeWidth="2dp"
                        app:strokeColor="#FFB74D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⚠"
                                    android:textSize="20sp"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Admin Override"
                                    android:textStyle="bold"
                                    android:textColor="#E65100"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:hint="Alasan override"
                                app:boxStrokeColor="#FFB74D"
                                app:hintTextColor="#E65100"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOverrideNotes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"
                                    android:maxLines="4"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:hint="Waktu Override (HH:mm)"
                                app:boxStrokeColor="#FFB74D"
                                app:hintTextColor="#E65100"
                                app:startIconDrawable="@drawable/ic_time"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOverrideTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="time"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Action Buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_retake"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ulangi Foto"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_camera"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="24dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_absen"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Absen Sekarang"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:backgroundTint="#0A4DA3"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:indeterminateTint="#0A4DA3"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textProgressStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Memproses..."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Bar - Fixed untuk semua ukuran HP -->
    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#0A4DA3"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pastikan foto Anda jelas dan lokasi GPS aktif"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:alpha="0.9" />
    </LinearLayout>

</RelativeLayout>